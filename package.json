        "i18next": "^23.0.0",
        "lit": "^2.7.0 || ^3.0.0"
    },
    "scripts": {
        "build": "rollup -c",
        "build-local": "rollup -c --environment APP_ENV:localCustom",
        "i18next": "i18next",
        "format": "npm run format:eslint && npm run format:prettier",
        "format:eslint": "eslint \"**/*.{js,ts}\" --fix",
        "format:prettier": "prettier \"**/*.{js,json,ts}\" --write",
        "watch": "rollup -c --watch",
        "watch-local": "rollup -c --watch --environment APP_ENV:localCustom",
        "watch-full": "rollup -c --watch --environment FORCE_FULL",
        "test": "rollup -c --environment APP_ENV:test && karma start karma.conf.cjs --singleRun",
        "test-full": "rollup -c --environment FORCE_FULL,APP_ENV:test && karma start karma.conf.cjs --singleRun",
        "lint": "eslint ."
    }
}
