    "type": "module",
    "main": "src/dbp-frontend-template-app.js",
    "license": "LGPL-2.1-or-later",
    "private": true,
    "workspaces": [
        "vendor/toolkit/packages/*"
    ],
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=7.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.10.3",
        "@babel/preset-env": "^7.10.3",
